= simple_form_for(@cycle) do |f|
  - if @cycle.errors.any?
    #error_explanation
      %h2
        = pluralize(@cycle.errors.count, "error")
        prohibited this cycle from being saved:
      %ul
        - @cycle.errors.full_messages.each do |message|
          %li= message
  = f.input :out_battery
  = f.input :battery_id
  = f.input :device_id
  .actions
  = f.submit
