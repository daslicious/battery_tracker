= simple_form_for(@battery) do |f|
  - if @battery.errors.any?
    #error_explanation
      %h2
        = pluralize(@battery.errors.count, "error")
        prohibited this battery from being saved:
      %ul
        - @battery.errors.full_messages.each do |message|
          %li= message
  = f.input :size
  = f.input :technology
  = f.input :brand
  = f.input :lookup
  .actions
    = f.submit
